{
  "name": "argus-test-runner",
  "version": "2.0.0",
  "description": "Watches for changes in your source and test files and executes automatic tests",
  "main": "index.js",
  "author": "Danko Lučić",
  "license": "MIT",
  "bugs": "https://github.com/ldgit/argus/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/ldgit/argus.git"
  },
  "keywords": [
    "test",
    "runner",
    "watch",
    "test-runner",
    "testing",
    "tdd",
    "cli",
    "convenient"
  ],
  "bin": {
    "argus": "./index.js"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "lolex": "^3.0.0",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "chokidar": "^2.0.4",
    "commander": "^2.19.0",
    "date-fns": "^1.29.0",
    "glob": "^7.1.3"
  },
  "optionalDependencies": {
    "fsevents": "^1.0.0"
  },
  "nyc": {
    "exclude": [
      "coverage/**",
      "test/**",
      "**/node_modules/**",
      "*.config.js"
    ]
  },
  "scripts": {
    "test": "mocha",
    "test-int": "mocha test/integration/**/*.test.js",
    "test-all": "npm run lint && npm test && npm run test-int",
    "lint": "eslint test/ src/ ./index.js",
    "coverage": "nyc --all npm t && nyc report --reporter=text-lcov | coveralls"
  },
  "engines": {
    "node": ">= 6"
  }
}
